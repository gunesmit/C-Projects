#include <stdio.h>
#include <stdlib.h>


int main() {
	
	int dizi[100];
	int i,sayi;
	int toplam=0;
	int ort=0;
	
	printf("Eleman Sayisi: ");
	scanf("%d",&sayi);
	
	for(i=0;i<sayi;i++)
	{
	  printf("Dizinin %d. degerini girin:  ",i+1);
	  scanf("%d",&dizi[i]);
	}

  printf("\n\n");
    
  for(i=0;i<sayi;i++)
  {
    toplam=toplam+dizi[i];
    ort=toplam/sayi;
	}
	
	printf("Dizideki elemanlarin toplami: %d\n",toplam);
	printf("Dizideki elemanlarin ortalamasi: %d",ort);
	
	
	
	return 0;
}
